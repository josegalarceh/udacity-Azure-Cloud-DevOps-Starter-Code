{
	"variables": {
		"client_id": "{{env `ARM_CLIENT_ID`}}",
		"client_secret": "{{env `ARM_CLIENT_SECRET`}}",
		"subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
		"tenant_id": "{{env `ARM_TENANT_ID`}}"
	},
	"builders": [{
		"type": "azure-arm",
	
		"client_id": "{{user `client_id`}}",
		"client_secret": "{{user `client_secret`}}",
		"subscription_id": "{{user `subscription_id`}}",
		"tenant_id": "{{user `tenant_id`}}",
	
		"os_type": "Linux",
		"image_publisher": "Canonical",
		"image_offer": "UbuntuServer",
		"image_sku": "18.04-LTS",
	
		"managed_image_resource_group_name": "rgPacker",
		"managed_image_name": "Ubuntu_image_1804_lts",
	
		"azure_tags": {
		  "role": "devops"
		},
	
		"location": "East US 2",
		"vm_size": "Standard_B1s"
	}],
	"provisioners": [{
		"type": "shell",
		"inline_shebang": "/bin/sh -x",
		"execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
		"inline": [
			"apt-get update",
			"apt-get upgrade -y",
			"mkdir '/var/www'",
      		"echo 'Hello World!' > '/var/www/index.html'",
      		"rm -f /etc/rc.local",
      		"printf '%s\n%s\n%s' '#!/bin/sh -e' 'nohup busybox httpd -vfp 80 -h /var/www &' 'exit 0' | sudo tee -a /etc/rc.local",
      		"chmod +x /etc/rc.local",
      		"systemctl daemon-reload && systemctl restart rc-local"
		]
	}]
}
